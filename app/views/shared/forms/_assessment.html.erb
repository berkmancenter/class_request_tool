<h1>Course Assessment</h1>

<%= semantic_form_for(@assessment) do |f| %>
  <%= f.inputs do %>
	<%= hidden_field_tag :course_id, @course.id %>
    <%= f.input :using_materials, :label => 'How did using collection materials complement your teaching goals? ', :input_html => { :rows => 5, :columns => 50 } %>
	<%= f.input :involvement, :label => "In what ways was Houghton Library involved in your class? ", :as => :check_boxes, :collection => Assessment::INVOLVEMENT %>
	Please evaluate how well the following met your teaching needs:<br />
	<%= f.input :staff_experience, :as => :radio, :collection => [1,2,3,4,5], :label => 'Reference staff expertise: ' %>
	<%= f.input :staff_availability, :as => :radio, :collection => [1,2,3,4,5], :label => 'Reference staff availability: ' %>
	<%= f.input :space, :as => :radio, :collection => [1,2,3,4,5], :label => 'Instructional space: ' %>
	<%= f.input :request_course, :as => :radio, :collection => [1,2,3,4,5], :label => 'Online request system for course: ' %>
	<%= f.input :request_materials, :as => :radio, :collection => [1,2,3,4,5], :label => 'Online request system for materials: ' %>
	<%= f.input :catalogs, :as => :radio, :collection => [1,2,3,4,5], :label => 'Library catalogs (Hollis, OASIS, etc.): ' %>
	<%= f.input :digital_collections, :as => :radio, :collection => [1,2,3,4,5], :label => 'Digital collections: ' %>
	
	<%= f.input :involve_again, :as => :radio, :label => 'Do you plan to involve Houghton Library in your teaching again? ' %>
	<%= f.input :not_involve_again, :label => 'If no, please tell us why not: ', :input_html => { :rows => 5, :columns => 50 } %>
	<%= f.input :better_future, :label => 'What could Houghton Library do to make your teaching with special collections better in the future? ', :input_html => { :rows => 5, :columns => 50 } %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :button, :label => 'Submit Assessment ' %>
  <% end %>
<% end %>